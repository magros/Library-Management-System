# Application
APP_NAME='Library Management API'
APP_VERSION=1.0.0
DEBUG=true

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/library_db
TEST_DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/library_test_db

# JWT
JWT_SECRET_KEY=change-me-to-a-random-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Built-in Admin
ADMIN_EMAIL=admin@library.com
ADMIN_PASSWORD=admin123456

# Logging
LOG_LEVEL=INFO

# Overdue checker interval (seconds) - default 24h
OVERDUE_CHECK_INTERVAL=86400

